{
	"name": "zachwatkins/wordpress-plugin-name",
	"description": "A GPL-2.0+ WordPress Plugin to serve as an introduction to WordPress plugin development.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Zachary Watkins",
			"email": "watkinza@gmail.com",
			"homepage": "https://github.com/zachwatkins"
		}
	],
	"autoload": {
		"classmap": ["thoughtfulweb/"]
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "*"
	},
	"repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/thoughtful-web/library-wp"
        }
    ],
    "require": {
        "thoughtful-web/library-wp": "dev-develop"
    },
	"scripts": {
		"post-install-cmd": [
			"composer run-script --no-dev config-wpcs"
		],
		"config-wpcs": [
			"phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
			"phpcs --config-set default_standard WordPress"
		],
		"checkwp": "phpcs --ignore=*/vendor/*,*/node_modules/* --filter=gitmodified .",
		"fixwp": "phpcbf --ignore=*/vendor/*,*/node_modules/* --filter=gitmodified ."
	}
}
